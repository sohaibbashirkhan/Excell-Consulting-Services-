
@{
    ViewBag.Title = "AddService";
    Layout = "~/Views/Shared/adminlayout.cshtml";
}

<h1 class="text-center">Add New Service </h1>
<form action="~/Account/AddService" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Title</label>
        <input type="text" class="form-control" placeholder="Enter Your servicetype " name="Title" />
        <br>
    </div>


    <div class="mb-3">
        <label class="form-label">ServiceType</label>
        @*<input type="text" class="form-control " placeholder="Enter Your Services Type " name="ServiceType" />*@

        <select name="ServiceType" id="cars" style="width:300px; text-align:center; font-size:18px;">
            <option value="InboundServices">InboundServices</option>
            <option value="OutboundServices">OutboundServices</option>
            <option value="TeleMarketing">TeleMarketing</option>
           
        </select>
        
        <br>
    </div>


    <div class="mb-3">

        <label class="form-label">Descriptions</label>
        <input type="text" class="form-control" placeholder="Enter Your Descriptions " name="Descriptions" />
        <br>
    </div>
    <div class="mb-3">
        <label class="form-label">Picture</label>
        <input type="file" class="form-control" placeholder="Add Your Photo" name="Picture" />
        <br>
    </div>

    <div class="mb-3">
        <label class="form-label">Price</label>
        <input type="text" class="form-control" placeholder="Enter Your Duration" name="Price" />
        <br>
    </div>

    <input type="submit" value="Insert Data" class="btn btn-success" />
</form>
