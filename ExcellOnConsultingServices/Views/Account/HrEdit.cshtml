@Model ExcellOnConsultingServices.HrManagement
@{
    ViewBag.Title = "HrEdit";
    Layout = "~/Views/Shared/adminlayout.cshtml";
}
<h1 class="text-center">Edit Your Details </h1>
<form action="~/Account/HrEdit" method="post" enctype="multipart/form-data">

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">ID</label>
        <input type="hidden" value="@Model.HRID" class="form-control" placeholder="Enter Your ID " name="HRID" />
        <br>
    </div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Name</label>
        <input type="text" value="@Model.HRName" class="form-control" placeholder="Enter Your Name " name="HRName" />
        <br>
    </div>

    <div class="mb-3">
        <label class="form-label">Phone no</label>
        <input type="text" value="@Model.PhoneNo" class="form-control" placeholder="Enter Your Phone " name="PhoneNo" />
        <br>
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="text" value="@Model.Email" class="form-control" placeholder="Enter Your Email " name="Email" />
        <br>
    </div>
    <div class="mb-3">
        <label class="form-label">Address</label>
        <input type="text" value="@Model.HRAddress" class="form-control" placeholder="Enter Your Address" name="HRAddress" />
        <br>
    </div>


    <input type="submit" value="Insert Data" class="btn btn-success" />
</form>
