@model IEnumerable<ExcellOnConsultingServices.Training>

@{
    ViewBag.Title = "Training";
    Layout = "~/Views/Shared/adminlayout.cshtml";
}
<h1 class="text-center">Training</h1>
<div>
    <a href="~/Account/AddTraining"><input type="submit" value="Add New" class="btn btn-success" /></a>

</div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descriptions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainingStatus)
        </th>
        <th>
           
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descriptions)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Picture)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrainingStatus)
        </td>
        <td>
            @Html.ActionLink("Edit", "TrainingEdit", new { id = item.ID }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.ID }) |*@
            @Html.ActionLink("Delete", "TrainingDelete", new { id = item.ID })
        </td>
    </tr>
}

</table>
