@model IEnumerable<ExcellOnConsultingServices.Branch>
@{
    ViewBag.Title = "Branch";
    Layout = "~/Views/Shared/adminlayout.cshtml";
}
<h2 class="text-center">Branches</h2>
<div>
    <a class="text-center" href="~/Account/AddBranch"><input type="submit" value="Add New" class="btn btn-success" /></a>

</div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BranchID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BranchName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BranchAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BranchID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BranchName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BranchAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.ActionLink("Edit", "BranchEdit", new { id=item.BranchID }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.BranchID }) |*@
            @Html.ActionLink("Delete", "BranchDelete", new { id=item.BranchID })
        </td>
    </tr>
}

</table>
