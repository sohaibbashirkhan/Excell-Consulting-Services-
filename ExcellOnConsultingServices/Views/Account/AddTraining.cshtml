
@{
    ViewBag.Title = "AddTraining";
    Layout = "~/Views/Shared/adminlayout.cshtml";
}

<h1 class="text-center">Enter Your Data</h1>
<form action="~/Account/AddTraining" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Title</label>
        <input type="text" class="form-control" name="title" />
        <br>
    </div>

    <div class="mb-3">
        <label class="form-label">Descriptions</label>
        <input type="text" class="form-control" placeholder="Enter Your Descriptions " name="Descriptions" />
        <br>
    </div>

    <div class="mb-3">
        <label class="form-label">Picture</label>
        <input type="file" class="form-control" placeholder="Add Your Photo" name="Picture" />
        <br>
    </div>

    <div class="mb-3">
        <label class="form-label">Duration</label>
        <input type="text" class="form-control" placeholder="Enter Your Duration" name="Duration" />
        <br>
    </div>

    <div class="mb-3">
        <label class="form-label">TrainingStatus</label>
        @*<input type="text" class="form-control" placeholder="Enter Your TrainingStatus" name="TrainingStatus" />*@
    <select name="TrainingStatus" id="cars" style="width:300px; text-align:center; font-size:18px;">
        <option value="InboundServices">InboundServices</option>
        <option value="OutboundServices">OutboundServices</option>
        <option value="TeleMarketing">TeleMarketing</option>
        <option value="Programing">Software</option>
        <option value="Other">Other</option>

    </select>

        <br>
    </div>
    <input type="submit" value="Insert Data" class="btn btn-success" />
</form>

